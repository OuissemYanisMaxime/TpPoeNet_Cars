@using Microsoft.AspNet.Identity
@using WebInterface.CustomHelpers;
@if (MyHelpers.IsClientConnected() || MyHelpers.IsPrestataireConnected())
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @{  string name;
                if (ViewBag.UserName != null) 
                {  name = ViewBag.UserName as string; }
                else { name = "!"; }
            }
            @Html.ActionLink("Bonjour " + name, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("S’inscrire", "RegisterClient", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Se connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
