            </DataGrid.Columns>
        </DataGrid>-->
               
        <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Nom</Label>
        <TextBox Grid.Row="1" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding CoordonneeP.Nom , Mode=TwoWay}"></TextBox>
        <Label Grid.Row="2" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Prenom</Label>
        <TextBox Grid.Row="3" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding CoordonneeP.Prenom, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="4" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Disponibilité</Label>
        <TextBox Grid.Row="5" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding Disponibilite, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="6" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Mail</Label>
        <TextBox Grid.Row="7" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding CoordonneeP.Mail, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="8" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Téléphone Fixe</Label>
        <TextBox Grid.Row="9" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding CoordonneeP.TelephoneFixe, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="10" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Téléphone Portable</Label>
        <TextBox Grid.Row="11" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding CoordonneeP.TelephonePortable, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="12" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Rue</Label>
        <TextBox Grid.Row="13" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding CoordonneeP.Rue, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="12" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1">Ville</Label>
        <TextBox Grid.Row="13" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding CoordonneeP.Ville, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="14" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Numéro de permis</Label>
        <TextBox Grid.Row="15" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding NumPermis, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="16" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Assurance</Label>
        <TextBox Grid.Row="17" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding Assurance, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="18" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Date d'inscription</Label>
        <DatePicker Grid.Row="19" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding DateInscription}"></DatePicker>
        <Label Grid.Row="20" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Dernière date de connection</Label>
        <DatePicker Grid.Row="21" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding dateConnection, Mode=TwoWay}"></DatePicker>
        <Label Grid.Row="22" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">Marque de voiture</Label>
        <TextBox Grid.Row="23" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding Voiture.Marque, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="22" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1">Modèle de voiture</Label>
        <TextBox Grid.Row="23" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding Voiture.modele, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="22" Grid.Column="2" Grid.RowSpan="1" Grid.ColumnSpan="1">Immatriculation</Label>
        <TextBox Grid.Row="23" Grid.Column="2" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding Voiture.Immatriculation, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="22" Grid.Column="3" Grid.RowSpan="1" Grid.ColumnSpan="2">Nombre de place du véhicule</Label>
        <TextBox Grid.Row="23" Grid.Column="3" Grid.RowSpan="1" Grid.ColumnSpan="1" Text="{Binding Voiture.Nb_Place, Mode=TwoWay}"></TextBox>

    
    </Grid>
</Window>
